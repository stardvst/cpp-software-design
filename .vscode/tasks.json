{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: create build folder for current folder",
      "command": "mkdir -p ./build/${relativeFileDirname}", // Create directories first
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [], // No problem matcher needed here
      "isBackground": true
    },
    {
      "type": "shell",
      "label": "C/C++: clang++ build active folder",
      "command": "/usr/bin/clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-std=c++20",
        "-g",
        "${workspaceFolder}/${relativeFileDirname}/*.cpp",
        "-o",
        "${workspaceRoot}/build/${relativeFileDirname}/main"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Builds all .cpp files in the active folder using clang++",
      "dependsOn": "C/C++: create build folder for current folder" // Reference first task
    }
  ],
  "version": "2.0.0"
}
